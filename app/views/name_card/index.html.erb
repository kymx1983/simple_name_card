<h1>一覧画面</h1>
<table border="1">
  <tr>
    <th>ID</th>
    <th>名前</th>
    <th>性別</th>
    <th>生年月日</th>
    <th>住所</th>
    <th>電話番号</th>
  </tr>

  <% @name_cards.each do |name_card| %>
    <tr>
      <td><%= name_card.id %></td>
      <td><%= name_card.name %></td>
      <td><%= name_card.gender %></td>
      <td><%= name_card.limit_date %></td>
      <td><%= name_card.address %></td>
      <td><%= name_card.tel %></td>
    </tr>
  <% end %>
</table>
